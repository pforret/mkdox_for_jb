<idea-plugin>
    <id>com.mkdox.button</id>
    <name>MkDox Button</name>
    <vendor email="support@mkdox.com" url="https://github.com/pforret/mkdox">mkdox</vendor>
    <description><![CDATA[
        Adds a toolbar action for running mkdox flows inside JetBrains IDEs.
    ]]></description>

    <depends>com.intellij.modules.platform</depends>
    <depends>org.jetbrains.plugins.terminal</depends>


    <extensions defaultExtensionNs="com.intellij">
        <notificationGroup id="MkDox" displayType="BALLOON" isLogBased="false"/>
    </extensions>

    <actions>
        <group
                id="com.mkdox.actions.MkDoxActionGroup"
                class="com.mkdox.actions.MkDoxActionGroup"
                text="MkDox"
                popup="true"
        >
            <add-to-group group-id="MainToolbarRight" anchor="last"/>
        </group>
    </actions>
</idea-plugin>
